{{- /*gotype: github.com/refinedmods/sitegen/render.RenderData*/ -}}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Source+Sans+Pro" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    {{ if .Project }}
        <link rel="stylesheet" href="/dist/{{.Project.Slug}}.css">
        <script src="/dist/{{.Project.Slug}}.js"></script>
    {{ else }}
        <link rel="stylesheet" href="/dist/index.css">
        <script src="/dist/index.js"></script>
    {{ end }}

    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-4514165126401708" crossorigin="anonymous"></script>

    <title>{{.Title}} - Refined Mods</title>
</head>
<body {{if .Project}}data-project="{{.Project.Slug}}"{{ end }}>

<nav class="navbar navbar-expand-md bg-dark-subtle main-nav d-none d-lg-block d-xl-block">
    <div class="container">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="ps-0 nav-link {{ if not .Project}}active{{ end }}" href="/"><i class="fas fa-globe"></i> Refined Mods</a>
            </li>
            {{range $project := .Site.Projects}}
                <li class="nav-item">
                    <a class="nav-link {{if eq $project $.Project}}active{{ end }}"
                       href="/{{$project.Slug}}">{{$project.Name}}</a>
                </li>
            {{end}}
        </ul>

        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link" href="https://twitter.com/refinedmods">
                    <i class="fab fa-twitter"></i> Twitter
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" rel="me" href="https://anvil.social/@refinedmods">
                    <i class="fab fa-mastodon"></i> Mastodon
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="https://github.com/refinedmods">
                    <i class="fab fa-github"></i> GitHub
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="https://discordapp.com/invite/VYzsydb"><i class="fab fa-discord"></i>
                    Discord</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="https://www.patreon.com/raoulvdberge"><i class="fab fa-patreon"></i>
                    Patreon</a>
            </li>
            <li class="nav-item">
                <div class="dropdown">
                    <a class="bd-theme nav-link dropdown-toggle" href="#" data-bs-display="static" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="theme-icon fas"></i> Theme
                    </a>
                    <ul class="dropdown-menu">
                        <li><button class="dropdown-item" data-bs-theme-value="light" type="button"><i class="fas fa-sun"></i> Light</button></li>
                        <li><button class="dropdown-item" data-bs-theme-value="dark" type="button"><i class="fas fa-moon"></i> Dark</button></li>
                        <li><button class="dropdown-item" data-bs-theme-value="auto" type="button"><i class="fas fa-palette"></i> Auto</button></li>
                    </ul>
                </div>
            </li>
        </ul>
    </div>
</nav>

<nav class="navbar navbar-expand-lg bg-body-secondary">
    <div class="container">
        <div class="d-flex">
            <div class="logo mt-2 mb-2">
                {{if not .Project}}
                    <a class="navbar-brand" href="/">
                        &nbsp;
                    </a>
                {{else if eq .Project.Name "Refined Storage"}}
                    <a class="navbar-brand" href="/{{.Project.Slug}}">
                        &nbsp;
                    </a>
                {{else if eq .Project.Name "Ranged Pumps"}}
                    <a class="navbar-brand" href="/{{.Project.Slug}}">
                        Ranged Pumps
                    </a>
                {{else if eq .Project.Name "Refined Pipes"}}
                    <a class="navbar-brand" href="/{{.Project.Slug}}">
                        Refined Pipes
                    </a>
                {{else if eq .Project.Name "Refined Storage Addons"}}
                    <a class="navbar-brand" href="/{{.Project.Slug}}">
                        &nbsp;
                    </a>
                {{end}}
            </div>
            {{if .Project}}
                {{if eq .Project.Name "Refined Storage Addons"}}
                    <span class="addons ms-2">Addons</span>
                {{end}}
            {{end}}
        </div>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="main-nav">
            <ul class="navbar-nav">
                {{if .Project}}
                    <li class="nav-item">
                        <a class="nav-link {{if eq .NavItem "home"}}active{{end}}" href="/{{.Project.Slug}}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{if eq .NavItem "wiki"}}active{{end}}" href="/{{.Project.Slug}}/wiki">Wiki</a>
                    </li>
                    {{if .Project.Releases}}
                        <li class="nav-item">
                            <a class="nav-link {{if eq .NavItem "releases"}}active{{end}}" href="/{{.Project.Slug}}/releases">Releases</a>
                        </li>
                    {{end}}
                {{ else }}
                <li class="nav-item">
                    <a class="nav-link active" href="/">Home</a>
                </li>
                {{ end }}

                <div class="d-block d-lg-none d-xl-none">
                    <li class="nav-item">
                        <a class="ps-0 nav-link {{ if not .Project}}active{{ end }}" href="/"><i class="fas fa-globe"></i> Refined Mods</a>
                    </li>
                    {{range $i, $project := .Site.Projects}}
                        <li class="nav-item">
                            <a class="{{if eq $i 0}}ps-0{{end}} nav-link {{if eq $project $.Project}}active{{ end }}"
                               href="/{{$project.Slug}}">{{$project.Name}}</a>
                        </li>
                    {{end}}
                    <li class="nav-item">
                        <a class="nav-link" href="https://twitter.com/refinedmods">
                            <i class="fab fa-twitter"></i> Twitter
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" rel="me" href="https://anvil.social/@refinedmods">
                            <i class="fab fa-mastodon"></i> Mastodon
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://github.com/refinedmods">
                            <i class="fab fa-github"></i> GitHub
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://discordapp.com/invite/VYzsydb"><i class="fab fa-discord"></i>
                            Discord</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://www.patreon.com/raoulvdberge"><i class="fab fa-patreon"></i>
                            Patreon</a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                            <a class="bd-theme nav-link dropdown-toggle" href="#" data-bs-display="static" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="theme-icon fas"></i> Theme
                            </a>
                            <ul class="dropdown-menu">
                                <li><button class="dropdown-item" data-bs-theme-value="light" type="button"><i class="fas fa-sun"></i> Light</button></li>
                                <li><button class="dropdown-item" data-bs-theme-value="dark" type="button"><i class="fas fa-moon"></i> Dark</button></li>
                                <li><button class="dropdown-item" data-bs-theme-value="auto" type="button"><i class="fas fa-palette"></i> Auto</button></li>
                            </ul>
                        </div>
                    </li>
                </div>
            </ul>
        </div>
    </div>
</nav>

<main role="main" class="pb-4">
    {{template "body" .}}
</main>

<footer class="container d-flex flex-wrap justify-content-between pt-4 pb-2">
    <p>&copy; Refined Mods {{now.UTC.Year}}</p>
</footer>

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-440597B2Z2"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-440597B2Z2');
</script>

</body>
</html>